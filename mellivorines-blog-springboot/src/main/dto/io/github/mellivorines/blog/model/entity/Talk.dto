input TalkInputForSave{
        content
        images
        isTop
        status

        flat(user) {
            id as userId
        }
}
input TalkInputForUpdate:TalkInputForSave{
        id
}
input TalkView {
        id
        isTop
        createTime
        content
        images
        flat(user) {
           nickname
           avatar
        }
}

input TalkAdminView:TalkView{
        status
}